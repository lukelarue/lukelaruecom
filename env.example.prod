# Production environment template for lukelarue.com
# Copy the relevant section into each service's deployment environment.
# Secrets (e.g., SESSION_JWT_SECRET, GOOGLE_OAUTH_CLIENT_SECRET) should be
# populated via Secret Manager rather than checked into source control.

# --- services/login-api (.env) ---
NODE_ENV=production
# Cloud Run sets PORT dynamically; override only if required.
PORT=8080
SESSION_COOKIE_NAME=session_token
SESSION_EXPIRES_IN=604800
# Comma-separated list, include all allowed origins (Cloudflare + direct).
WEB_APP_ORIGINS=https://lukelarue.com,https://www.lukelarue.com
GOOGLE_CLIENT_ID=226428490565-rj7bibt60n6errq7fp29utte133s8osc.apps.googleusercontent.com
GCP_PROJECT_ID=parabolic-env-456611-q9
USE_FIRESTORE_EMULATOR=false
# FIRESTORE_EMULATOR_HOST is omitted in production.
USE_FAKE_GOOGLE_AUTH=false

# --- services/chat-api (.env) ---
NODE_ENV=production
PORT=8080
GCP_PROJECT_ID=parabolic-env-456611-q9
WEB_APP_ORIGINS=https://lukelarue.com,https://www.lukelarue.com
USE_FIRESTORE_EMULATOR=false
# FIRESTORE_EMULATOR_HOST is omitted in production.
DEFAULT_CHANNEL_HISTORY_LIMIT=50

# --- apps/web (.env) ---
VITE_GOOGLE_CLIENT_ID=226428490565-rj7bibt60n6errq7fp29utte133s8osc.apps.googleusercontent.com
VITE_LOGIN_API_BASE_URL=https://login-api-dot-parabolic-env-456611-q9.a.run.app
VITE_CHAT_API_BASE_URL=https://chat-api-dot-parabolic-env-456611-q9.a.run.app
VITE_GOOGLE_LOGIN_MOCK=false
# Remove VITE_FAKE_GOOGLE_CREDENTIAL for production builds.
