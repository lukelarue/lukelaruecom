{
  "name": "@lukelarue/chat-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:emulator dev:chat-api",
    "dev:chat-api": "tsx watch src/index.ts",
    "dev:emulator": "firebase emulators:start --only firestore --project demo-firestore",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "test": "vitest"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/morgan": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "firebase-tools": "^13.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "supertest": "^6.3.4",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.3"
  }
}
