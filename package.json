{
  "name": "lukelarue-gaming-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Full-stack gaming platform prototype with React frontend, Node.js backend, and GCP infrastructure",
  "workspaces": [
    "apps/web",
    "services/login-api",
    "services/chat-api"
  ],
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:web:mock": "npm --workspace apps/web run dev:mock",
    "dev:web:backend": "npm --workspace apps/web run dev:backend",
    "dev:login-api": "npm --workspace services/login-api run dev",
    "dev:firebase": "npm run dev:emulator --workspace services/login-api",
    "dev:login-only": "npm run dev:login-api --workspace services/login-api",
    "dev:chat-only": "npm run dev:chat-api --workspace services/chat-api",
    "dev:backend": "npx npm-run-all --parallel dev:firebase dev:login-only dev:chat-only",
    "dev:stack": "npx npm-run-all --parallel dev:backend dev:web:backend",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces"
  }
}
